<h1>Notifications</h1>

<% @activities.each do |activity| %>
  <% if activity.owner == current_user %>
    <%= "You", activity.owner if activity.owner  %> 
    <%= render_activity activity %>
  <% else %>
  <div>
    <%= link_to activity.owner.name, activity.owner if activity.owner  %> 
    <%= render_activity activity %>
  </div>
  <% end %>
<% end %>
