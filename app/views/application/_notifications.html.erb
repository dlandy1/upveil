<% if @activities.first %> 
<span class="noty"><%= @activities.count.to_i %></span>
<li class="no-marg"> <a href="#" class="clike"><%= fa_icon "bell", class: 'clike' %></a>
                  <ul class="camo">
                    <div class="topfull">
                    <div class="scrolly">
                      <li class="notes camo ololo text-center">
                        <%= link_to "Mark as read", application_read_all_notification_path, method: :post, class: 'marker'%>
                      </li>
                    <% @activities.each do |activity| %>
                      <% if activity.owner == current_user %>
                      <li class= "notes camo ooo">
                         <%= link_to activity.trackable.title, class: 'fb-li' do%> 
                        <span>
                          <span class="samller pull-left helvetica"><%= image_tag(activity.owner.identity.smallimage)%></span>
                          <span>
                         <b>You</b>
                        <%= render_activity activity %>
                        </span>
                      </span>
                       <% end %>
                      </li>
                      <% else %>
                      <li class= "notes camo ooo">
                       <%= link_to activity.trackable.title, class: 'fb-li' do%> 
                        <span>
                          <span class="samller pull-left helvetica"><%= image_tag(activity.owner.identity.smallimage)%></span>
                          <span>
                         <b><%= activity.owner.name %></b>
                          </span>
                        <%= render_activity activity %>
                        </span>
                        </span>
                        <% end %>
                      </li>
                      <% end %>
                    <% end %>
                    </div>
                </ul>
          </li>
      <% else %>
                       <li class="no-marg"> <%= link_to (fa_icon "bell"), activities_path  %>
                       </li>
      <% end %>