<%= form_for [category] do |f| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(category.errors.count, "error") %></h4>
      <ul>
        <% category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
   <% end %>
     <div class="form-group">
        <%= f.label "Title*" %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter category name" %>
      </div>
      <div class="form-group hide">
        <%= f.label :parent_id %>
        <%= f.select :parent_id, options_from_collection_for_select(Category.all, "id", "title", parentcat.id), :prompt => "Select a Category" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter category description" %>
      </div>
    
      <div class="form-group">
        <%= f.label :gendered, class: 'checkbox' do %>
          <% if parentcat.gendered %>
            <%= f.check_box :gendered, {checked: true} %>  Products in this category are important to gender
          <% else %>
            <%= f.check_box :gendered %>  Products in this category are important to gender
          <% end %>
        <% end %>
      </div>
        <div class="form-group hide">
        <%= f.label :adult %>
       <% if parentcat.adult %>
            <%= f.check_box :adult, {checked: true} %>  Products in this category are important to gender
          <% else %>
            <%= f.check_box :adult %>  Products in this category are for people 18+
          <% end %>
      </div>

      <div class="form-group">
        <%= f.label :secret, class: 'checkbox' do %>
            <%= f.check_box :secret %> Do not let users know who created this category
        <% end %>
      </div>

       <%= f.submit "Save", class: 'btn btn-sm btn-primary former' %>
    <% end %>