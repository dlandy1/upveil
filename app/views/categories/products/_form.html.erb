<%= form_for [product] do |f| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(product.errors.count, "error") %></h4>
      <ul>
        <% product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
   <% end %>

    <% if categorie.parent_category %>
      <% if categorie.parent_category.parent_category %>
      <div class="form-group">
      <p>Category: <b><%= categorie.parent_category.title %></b></p>
    </div>
      <div class="form-group hide">
      <%= f.select :category_id, options_from_collection_for_select(Category.all, "id", "title", Category.find(categorie.parent_id).parent_id), :prompt => "Select a Category" %>
       </div>

       <div class="form-group hide">
       <%= f.select :subcat_id, options_from_collection_for_select(Category.all, "id", "title", categorie.parent_id ), :prompt => "Select a Category" %>
        </div>

          <%= f.label "Subcategory*" %>
        <div class="form-group">
       <%= f.select :grandcat_id, options_from_collection_for_select(Category.find(categorie.parent_id).subcategories, "id", "title", categorie.id ), :prompt => "Select a Category" %>
        </div>

    <% else %>

    <div class="form-group">
      <p>Category: <b><%= categorie.parent_category.title %></b></p>
    </div>

       <div class="form-group hide">
      <%= f.select :category_id, options_from_collection_for_select(Category.all, "id", "title", Category.find(categorie.parent_id).id), :prompt => "Select a Category" %>
       </div>

        <%= f.label "subcategory*" %>
       <div class="form-group">
       <%= f.select :subcat_id, options_from_collection_for_select(Category.find(categorie.parent_id).subcategories, "id", "title", categorie.id ), :prompt => "Select a Category" %>
        </div>

    <% end %>
    <% else %>

       <%= f.label "category*" %>
       <div class="form-group">
     <%= f.select :category_id, options_from_collection_for_select(Category.parent_categories.all, "id", "title", categorie.id), :prompt => "Select a Category" %>
       </div>
       <% if categorie.subcategories.first %>
        <%= f.label "subcategory*" %>
       <div class="form-group">
       <%= select_tag 'product[subcat_id]', options_from_collection_for_select(categorie.subcategories, "id", "title", product.subcat_id),
                     "data-option-dependent" => true,
                     "data-option-observed" => "product_category_id",
                     "data-option-url" => "/categories/:category_id:/subcategories.json",
                     "data-option-key-method" => :id,
                     "data-option-value-method" => :title %> 
        </div>

      <% end %>
    <% end %>

    <%= f.label "Gender*(Needed with Fashion)" %>
     <div class="form-group">
      <%= f.select :gender, options_for_select(["Female", "Male", "Unisex"], f.object.gender), :prompt => "Select a Gender" %>
     </div>
  <div class="form-group">
    <%= f.label "Title*" %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter product title" %>
  </div>
  <div class="form-group">
    <%= f.label "Link*" %>
    <%= f.text_field :link, class: 'form-control', placeholder: "Enter link" %>
  </div>
  <div class="form-group">
    <%= f.label :price, "$*", class: 'lefteren' %>
    <%= f.text_field :price, :class => 'text_field', class: 'cash', placeholder: "Enter Price without dollar sign" %>
  </div>
  <div class="form-group">
    <%= f.label "image*" %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <p>Or</p>
  <div>
     <%= f.label :remote_image_url, "Image URL" %>
    <%= f.text_field :remote_image_url, class: 'form-control', placeholder: "Enter url"  %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 3, class: 'form-control', placeholder: "Enter product description" %>
  </div>
  <div class="form-group text-center">
    <%= f.submit "Save", class: 'btn btn-sm btn-primary former' %>
  </div>
 <% end %>