<%= content_tag :div, id: "comment-#{comment.id}", class: "indont" do %>
  <div>
  <%= link_to '#', class: 'pull-left commentprof' do %>
    <%= image_tag(comment.user.identity.smallimage) %>
  <% end %>
  <div class='media-body'>
    <div class="loft">
    <small class="cament">
     <%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
      <div class="trosh">
        <% if current_user %>
        <%= link_to "reply", category_product_comment_reply_path(comment.product.category, comment.product, comment) ,method: :get, class: 'reply', remote: true%>
        <% if current_user == comment.user || current_user.id == 1 || current_user.id == 2 || current_user.id == 3 || current_user.id == 4  %>
        <%= link_to edit_category_product_comment_path(comment.product.category, comment.product, comment) ,class: 'flant' do %>
        <%= fa_icon "pencil" %>
       <% end %> 
       <%= link_to [comment.product.category, comment.product, comment] ,method: :delete, data: { confirm: 'Are you sure you want to delete this comment?'}, remote: true  do %>
        <%= fa_icon "trash-o" %>
       <% end %> 
      <% end %>
      <% else %>
        <%= link_to "reply", new_user_session_path , class: 'reply'%> 
      <% end %> 
      </div>
    </small>
    </div>
    <p class="dint"><%= comment.body%></p> 
      </div>
    <%= content_tag :div, id: "response-#{comment.id}" do %>
      <%= render partial: 'comments/response', collection: comment.subcomments, as: :subcomment %>
    <% end %>
    <%= content_tag :div, id: "new-#{comment.id}" do %>
    <% end %>
  </div>
<% end %>