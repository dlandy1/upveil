<%= content_tag :div, id: "comment-#{comment.id}", class: "indont" do %>
  <div>
  <%= link_to '#', class: 'pull-left commentprof' do %>
    <%= image_tag(comment.user.identity.smallimage) %>
  <% end %>
  <div class='media-body'>
    <div class="loft">
    <small class="cament">
     commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if current_user %>
      <div class="trosh">
        <%= link_to category_product_comment_reply_path(comment.product.category, comment.product, comment) ,method: :get, class: 'reply', remote: true  do %>
        <%= fa_icon "trash-o" %>
       <% end %> 
        <%= link_to "edit", edit_category_product_comment_path(comment.product.category, comment.product, comment) ,class: 'flant' %>
       <%= link_to [comment.product.category, comment.product, comment] ,method: :delete, data: { confirm: 'Are you sure you want to delete this comment?'}, remote: true  do %>
        <%= fa_icon "trash-o" %>
       <% end %> 
      </div>
      <% end %> 
    </small>
    </div>
    <p class="dint"><%= comment.body %></p>
      </div>
    <%= content_tag :div, id: "response-#{comment.id}" do %>
      <%= render partial: 'comments/response', collection: comment.subcomments, as: :subcomment %>
    <% end %>
    <%= content_tag :div, id: "new-#{comment.id}" do %>
    <% end %>
  </div>
<% end %>