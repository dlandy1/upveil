<%= form_for [ @product, @product.comments.new], remote: true do |f| %>
  <div class="form-group">
   <label for="inputPassword" class="col-sm-1 control-label">
       <%= f.label :body%>
   </label>
    <div class="col-sm-4">
      <%= f.text_field :body, class: 'form-control'%>
    </div>
    <div class="col-md-2">
      <%= f.submit "Create Comment"%>
    </div>
  </div>
<% end %>
