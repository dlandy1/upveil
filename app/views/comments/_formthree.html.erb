<%= content_tag :span, id: "form-#{@comment.id}" do %>
<%= form_for [category, product, comment], remote: true do |f| %>
  <div class="form-group">
    <div class="donl">
      <%= f.text_area :body, rows: 4, class: 'form-control'%>
    </div>
      <div class="form-group hide">
        <%= f.label :parent_id %>
        <%= f.select :parent_id, options_from_collection_for_select(product.comments.all, "id", "body", @comment.id)%>
      </div>
    <div style="
    text-align: left;">
      <%= f.submit "Respond", class: 'btn btn-default'%>
      <%= link_to "cancel",category_product_comment_cancel_path(@comment.product.category, @comment.product, @comment) ,method: :get, class: 'btn btn-default',remote: true %>
    </div>
  </div>
<% end %>
<% end %>