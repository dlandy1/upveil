<% if @comment.valid? %>
 $('.js-comments').append("<%= escape_javascript(render @comment) %>");
 $('.new-comment').html("<%= escape_javascript(render partial: 'form', locals: { category: @category, product: @product, comment: @new_comment }) %>");
<% else %>
 $('.new-comment').html("<%= escape_javascript(render partial: 'form', locals: { category: @category, product: @product, comment: @new_comment }) %>");
<% end %>