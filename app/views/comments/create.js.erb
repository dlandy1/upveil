<% if @comment.valid? %>
  <% if @comment.parent_comment != nil %>
     $('#response-'+<%= @comment.parent_comment.id%>).append("<%= escape_javascript(render partial: 'response', locals: {subcomment: @comment} ) %>");
     $('#form-'+<%= @comment.parent_comment.id%>).remove();
  <% else %>
 $('.js-comments').append("<%= escape_javascript(render @comment) %>");
 $('.new-comment').html("<%= escape_javascript(render partial: 'form', locals: { category: @category, product: @product, comment: @new_comment }) %>");
 <% end %>
<% else %>
 $('.new-comment').html("<%= escape_javascript(render partial: 'form', locals: { category: @category, product: @product, comment: @new_comment }) %>");
<% end %>