  <a class="btn btn-xs btn-primary space hotter" id= "hotter">Look by Hottest</a>
  <a class="btn btn-xs btn-primary space newer" id= "newer">Look by Newest</a>
    <h1 class="text-center font-best" style="
    font-family: times, Times New Roman, times-roman, georgia, serif;">All<br><p class="h6">The Newest and Best Products</p></h1>
    <%= link_to "New Product", new_product_path(@product), class: 'btn btn-primary btn-xs pull-right to-right' %>
    <div class="leaderboard">
      <% if current_user && Product.first %>
           <table class="table table-striped table-hover fixer">
              <thead>
                <tr>
                  <th></th>
                  <th>Top Users</th>
                  <th>Score</th>
                </tr>
              </thead>
               <tbody>
                 <% @leaders.each do |leader| %>
                   <% user = User.friendly.find(leader[:member].to_i) %>
                   <% rank = leader[:rank].to_i %>
                <tr>
                  <td><%= rank %></td>
                  <td>
                    <%= link_to [user] do %>
                      <%= image_tag(user.identity.smallimage)%><p><%= user.name %></p>
                    <% end %>
                  </td>
                  <td><%= leader[:score].to_i %></td>
                </tr>
                <% end %>
            </tbody>
          </table> 
      <% end %>
    </div>

  <div class="show_box" id="products">
    <div class="page newer">
     <%= render @products %>
    </div>
    <div class ="page hotter">
      <%= render :partial => 'product', :collection => @unscopes%>
    </div>
  </div>
  <br>
  <%= paginate @products %>