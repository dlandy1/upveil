<div class="dent sizzle">
    <div class="banner toply">
      <%= link_to root_path, class: 'inliner' do %>
        <%= fa_icon "line-chart", class: "banicon" %></br><span>Look by hottest</span>
      <% end %>
    <h1 class="h3 titlen">All
        <p class="h6 subtitle">The Newest and Best Products</p>
    </h1>
    <%= link_to  new_product_path(@product), class: 'prada' do%>
     <%= fa_icon "gift", class: "banicon" %></br><span>Post Product</span>
  <% end %>
  <%= link_to new_category_path, class: 'suber' do %>
                 <%= fa_icon "sitemap", class: "banicon" %></br><span>New Category</span>
          <% end %>
    </div>
  </div>

    <div class = "outerfixed" >
      <div class = "interstatic">
        <div class="leaderboard">
          <% if current_user && Product.first %>
               <table class="table table-striped table-hover fixer">
                  <thead>
                    <tr>
                      <th colspan="2" class="names">Top Users</th>
                      <th class="names">Score</th>
                    </tr>
                  </thead>
                   <tbody>
                     <% @leaders.each do |leader| %>
                       <% user = User.friendly.find(leader[:member].to_i) %>
                       <% rank = leader[:rank].to_i %>
                    <tr>
                      <td class="td"><%= rank %></td>
                      <td>
                        <%= link_to [user] do %>
                          <%= image_tag(user.identity.smallimage)%><p class="names"><%= user.name %></p>
                        <% end %>
                      </td>
                      <td class="td"><%= leader[:score].to_i %></td>
                    </tr>
                   <% end %>
                </tbody>
              </table> 
          <% end %>
        </div>
      </div>
    </div>

<div class="container">
   <div class="boxsearch" style="">
      <div id="categories" class="col-md-3 pull-left"></div>
      <div id="users" class="col-md-5 pull-right pod"></div>
      <div id="posts" class="col-md-4 pod"></div>
    </div>

 <div class="row">
  <div class="show-box" id="products">
    <div class="page">
     <%= render @unscopes %>
    </div>
  </div>
 <%= paginate @unscopes %>
</div>
</div>
