<h1 class="h3 text-center font-best"><% if @user == current_user %>
     <%= link_to "Edit User",  edit_user_path(@user), class: 'btn btn-xs btn-warning fonter showel' %>
    <% end %><b><%=@user.name %></b></h1>
 <% if @user == current_user && @user.instagram_url.nil? && @user.twitter_url.nil? %>
  <div class='new-social'>
      <h4 class="paddel text-center mediar">Link to your social media</h4>
        <%= render "formal" %>
    </div>
     <% end %>
  <div class="text-center">
    <% if @user.instagram_url %>
      <% if @user.instagram_url.length  > 22 && @user.instagram_url != nil %>
        <%= link_to @user.instagram_url, :target => "_blank" do%>
           <%= fa_icon "instagram 2x", class: 'colorel' %>
          <% end %>
      <% end %>
    <% end %>

    <% if @user.twitter_url %>
      <% if @user.twitter_url.length  > 19 && @user.twitter_url != nil%>
       <%= link_to @user.twitter_url, :target => "_blank" do%>
           <%= fa_icon "twitter 2x", class: 'coloring' %>
          <% end %>
      <% end %>
    <% end %>
    </div>

<div class="show_box">
    <% @user.products.each do |product| %>
      <%= render product %>
      <% end %>
</div>