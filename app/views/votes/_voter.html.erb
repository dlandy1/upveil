<div class="vote-arrows">
    <div>
      <% if current_user %>
      <%= link_to "", 
        product_up_vote_path(product), 
        class: "glyphicon glyphicon-chevron-up #{(product.already_up_voted_by_user?(current_user)) ? 'voted' : ''} ",
         method: :post,id: "upvote-#{product.id}", remote: true %></div>
    <div><strong id="vote-<%=product.id%>"><%= product.points %></strong></div>
    <div><%= link_to "", product_down_vote_path(product), 
    class: "glyphicon glyphicon-chevron-down #{(product.already_down_voted_by_user?(current_user))  ? 'voted' : ''}", id: "downvote-#{product.id}", method: :post, remote: true %></div>
    <% else %>
    <%= link_to "", 
        product_up_vote_path(product), 
        class: "glyphicon glyphicon-chevron-up", method: :post %></div>
    <div><strong style="
    color: #666666;"><%= product.points %></strong></div>
    <div><%= link_to "", product_down_vote_path(product), 
    class: "glyphicon glyphicon-chevron-down", method: :post  %></div>
    <% end %>
  </div>