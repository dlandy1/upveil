<div class="pull-left vote-arrows">
    <div>
      <% if current_user %>
      <%= link_to "", 
        product_up_vote_path(product), 
        class: "glyphicon glyphicon-chevron-up #{product.id} #{(product.already_up_voted_by_user?(current_user)) ? 'voted' : ''} ", method: :post%></div>
    <div class='js-comments-count'><strong><%= product.points %></strong></div>
    <div><%= link_to "", product_down_vote_path(product), 
    class: "glyphicon glyphicon-chevron-down #{(product.already_down_voted_by_user?(current_user))  ? 'voted' : ''}", method: :post%></div>
    <% else %>
    <%= link_to "", 
        product_up_vote_path(product), 
        class: "glyphicon glyphicon-chevron-up", method: :post %></div>
    <div><strong><%= product.points %></strong></div>
    <div><%= link_to "", product_down_vote_path(product), 
    class: "glyphicon glyphicon-chevron-down", method: :post %></div>
    <% end %>
  </div>