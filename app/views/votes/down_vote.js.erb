<% if !@product.already_down_voted_by_user?(current_user) %>
  $('#downvote-'+<%= @product.id %>).css('color', 'grey');
  $('#upvote-'+<%= @product.id %>).css('color', 'grey');
  $('#vote-'+<%= @product.id %>).empty().append("<strong><%=@product.points %></strong>");
<% else %>
 $('#downvote-'+<%= @product.id %>).css('color', '#9E916A');
 $('#upvote-'+<%= @product.id %>).css('color', 'grey');
 $('#vote-'+<%= @product.id %>).empty().append("<strong><%=@product.points %></strong>");
<% end %>